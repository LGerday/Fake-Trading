<UserControl x:Class="MyWPFApp.View.FutureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWPFApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ButtonStyleMouseOver"
               TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#13131C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5,5,5,5" />
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True" >
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  Grid.Row="0"
                  x:Name="DisplayCrypto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0"
                      Margin="5,0"
                      HorizontalAlignment="Stretch"
                            >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="1" 
                        Content="Name"
                        FontSize="22"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                    <Label 
                        Grid.Column="2" 
                           Content="Price"
                           FontSize="22"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                    <Label 
                        Grid.Column="3" 
                           Content="MaketCap"
                           FontSize="22"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                    <Label 
                        Grid.Column="4" 
                           Content="24H"
                           FontSize="22"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                </Grid>
                <Button 
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource ButtonStyleMouseOver}"
                    Content="Refresh All"
                    Margin="2"
                    Click="RefreshAll"/>
                <Grid Grid.Row="1" Grid.Column="0"
                      Margin="5,0"
                      HorizontalAlignment="Stretch"
                      x:Name="BitcoinPanel">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="{Binding Image}"
                           Stretch="Uniform"
                           Margin="2"/>
                    <Label Grid.Column="1"
                           Content="Bitcoin"
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2"
                               Text="{Binding Price, StringFormat='C'}"
                               FontSize="15"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                    <TextBlock  Grid.Column="3"
                                Text="{Binding MarketCap, StringFormat='C'}"
                                FontSize="15"
                                Foreground="White"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>
                    <DockPanel Grid.Column="4"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center">
                        <TextBlock 
                            Text="{Binding Change,StringFormat='N2'}"
                            FontSize="15"
                            Foreground="White"/>
                        <TextBlock Text="%"
                                   FontSize="15"
                                   Foreground="White"/>
                    </DockPanel>
                </Grid>
                <Button Style="{StaticResource ButtonStyleMouseOver}"
                        Content="Refresh"
                        Click="BitcoinRefresh"
                        Grid.Row="1"
                        Grid.Column="1"/>
                <Grid Grid.Row="2" Grid.Column="0"
                      Margin="5,0"
                      HorizontalAlignment="Stretch"
                      x:Name="EthereumPanel">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="{Binding Image}"
                           Stretch="Uniform"
                           Margin="2"/>
                    <Label Grid.Column="1"
                           Content="Ethereum"
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2"
                               Text="{Binding Price, StringFormat='C'}"
                               FontSize="15"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                    <TextBlock  Grid.Column="3"
                                Text="{Binding MarketCap, StringFormat='C'}"
